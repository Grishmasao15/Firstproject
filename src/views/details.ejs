<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Query Table</title>
    <style>
        body{
            font-family: sans;
        }
        table{
            border: 1px solid black;
            background-color: azure;
        }
        
        th{
            background-color: rgb(181, 199, 199);
        }
        
        th,tr,td{
            border:1px solid black
        }
        .pagination{
            display: flex;
        }
        
    </style>
</head>
<body>

    <div class="queryclass" id="queryclass1">
        <form action="/iddetails" method="post">
            Enter Student ID:<input type="text" name="qr" id="qr" placeholder="Enter student ID">
            <input type="submit" value="submit">
            <input type="button" value="more" onclick="sub()">
        </form>
    </div>

   <div class="queryclass" id="queryclass">

        <form action="/searchdetails" method="post">
            Enter First Name :<input type="text" name="fn" placeholder="Enter student's Firstname"><br>

            <select name="Andor" id="Andor">
                <option value="AND">AND</option>
                <option value="OR">OR</option>
            </select><br>

            Enter Last Name :<input type="text" name="ln"  placeholder="Enter student's lastname"><br>
            <input type="submit" value="submit">
        </form>

    </div>

    <br><br>

    <table>
        
        <h2> Here is Your Details :</h2>

        <tr>
            <% for(let i=0;i<fields.length;i++){ %>

                <th><%= fields[i].name %></th>

            <% } %>
        </tr>

        <% for(let i=0;i<result.length ;i++){ %>
            <tr>
                <% for(let j=0;j<fields.length;j++){ %>

                    <td><%= result[i][fields[j].name] %></td>

                <% } %>
            </tr>
        <% } %>

        


    </table>

    <script>
       
       var div = document.getElementById("queryclass");
        var div2=document.getElementById("queryclass1");
        
        div.style.display = "none";
        div2.style.display= "block";
        
        var c=0;

        
        function sub()
        {
                if(c==0)
                {

                    div.style.display = "block";
                    div2.style.display= "none";

                    
                    
                    c=1;


                }
                else{
                      div.style.display = "none";
                      div2.style.display= "block";
                      
                      c=0;

                }

        }

    </script>
</body>
</html>