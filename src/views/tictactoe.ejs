<body>
    <center><h1>Grishma Sao <br>
        05-02-24 <br>
        24DEV008</h1></center>
    <form>
    <table border="5" cellspacing="0" cellpadding="70" align="center">
        
        <tr>
            <td id="1" onclick="act('1')"></td>
            <td id="2" onclick="act('2')"></td>
            <td id="3" onclick="act('3')"></td>
        </tr>
        <tr>
            <td id="4" onclick="act('4')"></td>
            <td id="5" onclick="act('5')"></td>
            <td id="6" onclick="act('6')"></td>
        </tr>
        <tr>
            <td id="7" onclick="act('7')"></td>
            <td id="8" onclick="act('8')"></td>
            <td id="9" onclick="act('9')"></td>
        </tr>
         
     
    </table>
    <br><br><center><input type="reset" id="reset" value="RESET" onclick="location.reload()"></center>
</form>
    <script>
        var counter=1;
        var zero_array=Array();
        var x_array=Array();

        function act(id){

            if(counter%2==0){
                if(document.getElementById(id).innerHTML==''){
                document.getElementById(id).innerHTML="<font size='25px'><b>X</b></font>";
                x_array.push(id);
                counter++;
                }
            }

            else{
                if(document.getElementById(id).innerHTML==''){
                document.getElementById(id).innerHTML="<font size='25px'><b>0</b></font>";
                zero_array.push(id);
                counter++;
                }
            }

            if((x_array.includes("1")&& x_array.includes("2")&& x_array.includes("3"))||(x_array.includes("4")&& x_array.includes("5")&& x_array.includes("6"))||(x_array.includes("7")&& x_array.includes("8")&& x_array.includes("9") )|| (x_array.includes("1")&& x_array.includes("4")&& x_array.includes("7") )|| (x_array.includes("2")&& x_array.includes("5")&& x_array.includes("8"))||(x_array.includes("3")&& x_array.includes("6")&& x_array.includes("9") )|| (x_array.includes("1")&& x_array.includes("5")&& x_array.includes("9") )|| (x_array.includes("3")&& x_array.includes("5")&& x_array.includes("7"))){
                alert("X Won the Game");
                location.reload();
            }

            else if((zero_array.includes("1")&& zero_array.includes("2")&& zero_array.includes("3") )||( zero_array.includes("4")&& zero_array.includes("5")&& zero_array.includes("6") )|| (zero_array.includes("7")&& zero_array.includes("8")&& zero_array.includes("9") )|| (zero_array.includes("1")&& zero_array.includes("4")&& zero_array.includes("7") )|| (zero_array.includes("2")&& zero_array.includes("5")&& zero_array.includes("8") )||( zero_array.includes("3")&& zero_array.includes("6")&& zero_array.includes("9") )||( zero_array.includes("1")&& zero_array.includes("5")&& zero_array.includes("9") )||( zero_array.includes("3")&& zero_array.includes("5")&& zero_array.includes("7"))){
                alert("Zero Won the Game");
                location.reload();
            }

            else if(counter==10){
                alert("No one Won the Game");
                location.reload();
            }

        }

    </script>
