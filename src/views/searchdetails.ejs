<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            font-family: sans;
        }
        button{
            margin-left: 10px;
        }
        table,tr,td{
            border: 1px solid black;
            background-color: azure;
        }
        th{
            background-color: rgb(181, 199, 199);
        }
    </style>

</head>
<body>
    <div class="queryclass" id="queryclass1">
        <form action="/iddetails" method="post">
            Enter Student ID:<input type="text" name="qr" id="qr" placeholder="Enter student ID">
            <input type="submit" value="Submit">
            <input type="button" value="show more" onclick="sub()">
        </form>
    </div>


    <div class="queryclass" id="queryclass">

        <form action="/searchdetails" method="post">
            Enter First Name :<input type="text" name="fn" placeholder="Enter Firstname"><br>
            <select name="Andor" id="Andor">
                <option value="AND">AND</option>
                <option value="OR">OR</option>
        </select><br>
            Enter Last Name :<input type="text" name="ln"  placeholder="Enter lastname"><br>
            <input type="submit" value="Submit">
        </form>

    </div>


    <br><br>
    <table>
        <thead>
            
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>DOB</th>
            <th>Contact No</th>
            <th>Email</th>
            <th>City</th>
            <th>Country</th>
            <th>ZipCode</th>
            <th>Bloodgroup</th>
            <th>Created at</th>

        </tr>
        </thead>

        <tbody>
            <% for(let i=0;i<data.length;i++){ %>
             <tr>
               <td><%= data[i].stu_id %></td>
               <td><%= data[i].firstname %></td>
               <td><%= data[i].lastname %></td>
               <td><%= data[i].DOB %></td>
               <td><%= data[i].contact_no %></td>
               <td><%= data[i].email %></td>
               <td><%= data[i].city %></td>
               <td><%= data[i].country %></td>
               <td><%= data[i].zipcode %></td>
               <td><%= data[i].bloodgroup %></td>
               <td><%= data[i].created_at %></td>
             </tr>
            <% } %>
        </tbody>
        
    </table>

    <script>

        var div = document.getElementById("queryclass");
        var div2=document.getElementById("queryclass1");
        
        div.style.display = "none";
        div2.style.display= "block";
        
        var c=0;

        
        function sub()
        {
                if(c==0)
                {

                    div.style.display = "block";
                    div2.style.display= "none";

                    
                    
                    c=1;


                }
                else{
                      div.style.display = "none";
                      div2.style.display= "block";
                      
                      c=0;

                }

        }
    </script>
</body>
</html>